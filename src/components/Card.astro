---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="card w-96 bg-base-300 shadow-xl card-bordered card-compact m-2.5">
	<div class="card-body">
	<a class="link link-hover" href={href}>
		<div class="card-title">
			{title}
			<span>&rarr;</span>
		</div>
		<div class="card-body">
			<p>
				{body}
			</p>
		</div>

	</a>

	</div>
</div>
